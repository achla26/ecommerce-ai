{
    "name": "server",
    "version": "1.0.0",
    "main": "dist/server.js",
    "scripts": {
        "dev": "nodemon",
        "prisma:generate": "prisma generate --schema=src/prisma/schema.prisma",
        "prisma:migrate": "prisma migrate dev --schema=src/prisma/schema.prisma --create-only && npm run prisma:migrate:apply",
        "prisma:migrate:apply": "prisma migrate deploy --schema=src/prisma/schema.prisma",
        "prisma:reset": "prisma migrate reset --schema=src/prisma/schema.prisma --force",
        "prisma:pull": "prisma db pull --schema=src/prisma/schema.prisma",
        "prisma:push": "prisma db push --schema=src/prisma/schema.prisma",
        "prisma:studio": "prisma studio --schema=src/prisma/schema.prisma",
        "prisma:repair": "npm run prisma:pull && npm run prisma:generate && npm run prisma:migrate"
    },
