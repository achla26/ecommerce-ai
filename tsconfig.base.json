{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "allowJs": false,
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "packages/shared/src/*"
            ]
        }
    }
}